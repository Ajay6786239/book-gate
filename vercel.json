{
  "version": 2,
  "builds": [
    {
      "src": ".vercel-build.sh",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "myapp/manage.py"
    },
    {
      "src": "/feedback/((?!general).*)",
      "dest": "/api/feedback/general"
    },
    {
      "src": "/feedback/:id",
      "dest": "/api/feedback/:id"
    }
  ],
  
  "env": {
    "SECRET_KEY": "t!m(8q3_7yzj8&1(b-f%q!c@17_d0r!8)*gq!@4g(7d3c#d)4z",
    "DATABASE_URL": "mysql://root:14082004@your-database-host:3306/BookLib",
    "DEBUG": "false",
    "ALLOWED_HOSTS": "BookLib.vercel.app,www.AjayLib.com"
  },
  "scripts": {
    "build": "python manage.py collectstatic --noinput && python manage.py migrate"
  }
}
